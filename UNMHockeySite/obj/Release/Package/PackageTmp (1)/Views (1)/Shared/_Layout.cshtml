<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - UNM Lobo Hockey</title>
    @Styles.Render("~/Content/fullcalendarcss")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")




</head>
<body>
    <div class="top-bar-image">
        <div class="top-bar-design-image">
            <img class="img-responsive" src="~/Content/Images/top_bar.png" align="left" width="550" usemap="imagemap" />
            <map name="imagemap">
                <area shape="rect" coords="230,20,50,120" href='@Url.Action("Index", "Home")' alt="Home">
            </map>
        </div>
        <div class="nav-bar-title">
            <img src="~/Content/Images/LoboTitle.png" align="middle" width="400" hspace="50" />
        </div>
    </div>
    <div class="navbar navbar-inverse navbar-static-top">
        <div class="container">

        </div>
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href='@Url.Action("Index", "Home")' class=navbar-brand>
                    <img border="0" alt="Home " src="~/Content/Images/lobo_side.png" width="20">
                </a>
                @Html.ActionLink("UNM Hockey", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    
                    <li class="navbar-link">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "navbar-link" })</li>
                    <li class="navbar-link">@Html.ActionLink("Schedule", "Index", "Games", new { area = "" }, new { @class = "navbar-link" })</li>
                    <li class="navbar-link">@Html.ActionLink("Tickets", "SeasonTickets", "Home", new { area = "" }, new { @class = "navbar-link" })</li>
                     <li><a class="navbar-link" target="_blank" href="http://achahockey.org/view/achahockey/men-s-d1/teams-361?type=standings&level=conference&id=1152&league_id=1800&conference_id=1152">Standings</a></li>
                    <li><a class="navbar-link" target="_blank" href="http://achahockey.org/view/achahockey/men-s-d1/teams-361?type=roster&level=team&id=508774&league_id=1800&conference_id=1152&division_id=76940&division_id=76940&team_id=508774">Roster</a></li>
                    <li><a class="navbar-link" target="_blank" href="http://achahockey.org/view/achahockey/men-s-d1/teams-361?type=statistics&level=team&id=508774&league_id=1800&conference_id=1152&division_id=76940&division_id=76940&team_id=508774">Statistics</a></li>

                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <a href="http://achahockey.org/view/achahockey"><img class="glyphicon-link" src="~/Content/Images/acha.png" align="right" width="50" /></a>
            <p style="color:black"><b>&copy; @DateTime.Now.Year - UNM Lobo Hockey</b></p>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/fullcalendarjs")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
