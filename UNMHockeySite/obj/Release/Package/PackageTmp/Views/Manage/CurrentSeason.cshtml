@model UNMHockeySite.Models.CurrentSeasonViewModel

@{
    ViewBag.Title = "Select Current Season";
}


<div class="row">
    <div class="col-md-6 col-md-push-3">
        <div class="card">
            <div class="card-header">
                <img class="pic-smaller" src="~/Content/Images/logo_sticks.jpeg" />
                <h2>@ViewBag.Title</h2>
            </div>
            <div class="card-content">
                <br />
                @using (Html.BeginForm())
                {
                    <p>This will serve as the current season for the website. It will set the stats, schedule and other information for the website.</p>
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="SelectedYear" class="control-label col-md-2">Select a Year</label>
                        <div class="col-md-offset-2 col-md-10">
                            @Html.DropDownListFor(m => m.SelectedSeason, Model.Seasons, new { @class="form-control"})
                        </div>
                    </div>
                    <input type="submit" value="Set Current Season" class="btn btn-default" />
                }
                <div>
                    @Html.ActionLink("Back to Manage", "Index")
                </div>
            </div>
        </div>
    </div>
</div>