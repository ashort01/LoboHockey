<script src="~/Scripts/InstaFeed.js"></script>
<script type="text/javascript">
    var gameDate = '@ViewBag.GameDate';
    $("#clock")
    .countdown(gameDate, function (event) {
        $('#days').text(
              event.strftime('%D')
            );
        $('#hours').text(
            event.strftime('%H')
            );
        $('#minutes').text(
            event.strftime('%M')
            );
        $('#seconds').text(
            event.strftime('%S')
            );
    });
</script>
