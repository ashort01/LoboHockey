<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @if (String.IsNullOrEmpty(ViewBag.Title))
    { 
            <title>@ViewBag.Title UNM Lobo Hockey</title>
    }
    else
    {
        <title>UNM Lobo Hockey @ViewBag.Title </title>
    }
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/fullcalendarjs")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datepicker")
    @Scripts.Render("~/bundles/timepicker")
    @Scripts.Render("~/bundles/countdown")
    @Scripts.Render("~/bundles/crop")
    @Styles.Render("~/Content/fullcalendarcss")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/datepickercss")
    @Styles.Render("~/Content/timepickercss")
    @RenderSection("scripts", required: false)
    @* Favicon *@
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/Images/lobo_side.png")" />
</head>
<body>
    <div class="banner" id="banner">
        <div class="row upper-banner ">
            <div class="container">
                <div class="col-xs-1">
                    <img src="~/Content/Images/acha_transparent.png" width="50" style="margin-left:20px" />
                </div>
                <div class="col-xs-10">
                    <center>
                        <p><b>THE OFFICIAL SITE OF UNM HOCKEY</b></p>
                    </center>
                </div>
                <div class="col-xs-1">
                    <img src="~/Content/Images/acha_transparent.png" width="50" style="margin-left:20px" />
                </div>
            </div>
        </div>
            <div class="row lower-banner">
                <div class="container">
                    <div class="lower-banner-slogan">
                        <h1> the legs feed the wolf </h1>
                    </div>
            </div>
        </div>
    </div>
    <div class="nav-wrapper">
        <div id="topnavbar" class="navbar navbar-inverse navbar-static-top">
            <div class="container">

                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href='@Url.Action("Index", "Home")' class=navbar-brand>
                        <img src="~/Content/Images/lobo.png" class="navbar-big-image" />
                        @*<img border="0" alt="Home " src="~/Content/Images/lobo_side.png" width="20">*@
                    </a>
                    @Html.ActionLink("UNM Hockey", "Index", "Home", new { area = "" }, new { @class = "navbar-brand navbar-main-link unm-font" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="navbar-link">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-link" })</li>
                        <li class="navbar-link">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "navbar-link" })</li>
                        <li class="navbar-link">@Html.ActionLink("Roster", "Index", "Roster", new { area = "" }, new { @class = "navbar-link" })</li>
                        <li class="navbar-link">@Html.ActionLink("Video", "Video", "Home", new { area = "" }, new { @class = "navbar-link" })</li>
                        <li class="navbar-link">@Html.ActionLink("Statistics", "Index", "Statistics", new { area = "" }, new { @class = "navbar-link" })</li>
                        <li class="navbar-link">@Html.ActionLink("Schedule", "Index", "Games", new { area = "" }, new { @class = "navbar-link" })</li>
                        @*<li class="navbar-link">@Html.ActionLink("Tickets", "SeasonTickets", "Home", new { area = "" }, new { @class = "navbar-link" })</li>*@
                        @*<li><a class="navbar-link" target="_blank" href="http://achahockey.org/view/achahockey/men-s-d1/teams-361?type=standings&level=conference&id=1152&league_id=1800&conference_id=1152">Standings (acha.org)</a></li>
                            <li><a class="navbar-link" target="_blank" href="http://achahockey.org/view/achahockey/men-s-d1/teams-361?type=roster&level=team&id=508774&league_id=1800&conference_id=1152&division_id=76940&division_id=76940&team_id=508774">Roster (acha.org)</a></li>
                            <li><a class="navbar-link" target="_blank" href="http://achahockey.org/view/achahockey/men-s-d1/teams-361?type=statistics&level=team&id=508774&league_id=1800&conference_id=1152&division_id=76940&division_id=76940&team_id=508774">Statistics (acha.org)</a></li>*@
                        <li class="navbar-link">@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "navbar-link" })</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <div class="row">
                    <div class="col-xs-6">
                        <p style="color:black"><b>&copy; @DateTime.Now.Year - UNM Lobo Hockey</b></p>
                        @if (Request.IsAuthenticated)
                        {
                            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                            {
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm" onclick="location.href='javascript:document.getElementById('logoutForm').submit()'">Log Off</button>

                            }
                        }
                        else
                        {
                            <ul class="nav navbar-nav navbar-right">
                                <button class="btn btn-sm" onclick="location.href='@Url.Action("Register", "Account")';">Register</button>
                                <button class="btn btn-sm" onclick="location.href='@Url.Action("Login", "Account")';">Log In</button>
                            </ul>
                        }

                    </div>

                    <div class="col-xs-6">
                        <a href="http://achahockey.org/view/achahockey"><img class="image-circle" src="~/Content/Images/acha_square.png" align="right" width="50" /></a>
                    </div>
                </div>
            </footer>
        </div>



</body>
</html>
<script type="text/javascript">
    $('#topnavbar').affix({
        offset: {
            top: $('#banner').height()
        }   
    });
</script>
