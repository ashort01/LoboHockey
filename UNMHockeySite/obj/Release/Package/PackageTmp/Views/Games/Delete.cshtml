@model UNMHockeySite.Models.Game

@{
    ViewBag.Title = "Delete";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <img src="~/Content/Images/lobo_side.png" />
                <h2>Delete</h2>
            </div>
            <div class="card-content">
                <br />
                <h3>Are you sure you want to delete this?</h3>
                <div>
                    <h4>Game</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Opponent)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Opponent)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.IsHome)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.IsHome)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Date)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Date)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.TeamScore)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TeamScore)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.OpponentScore)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.OpponentScore)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-default" /> |
                            @Html.ActionLink("Back to List", "Manage",new { seasonId = Model.Season.Id})
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>


