@model UNMHockeySite.Models.GameViewModel

@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <img src="~/Content/Images/lobo_side.png" />
                <h2>Add Game</h2>
            </div>
            <div class="card-content">
                <br />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        <div class="form-group">
                            @Html.LabelFor(model => model.Opponent, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Opponent, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Opponent, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="IsHome" class="control-label col-md-2">Home Game</label>
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.IsHome)
                                    @Html.ValidationMessageFor(model => model.IsHome, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.DateString, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.DateString, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DateString, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TimeString, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TimeString, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TimeString, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("Back to Manage", "Index", "Manage", new { seasonId = Model.SeasonId }, "")
                </div>


            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#TimeString').timepicker({ 'scrollDefault': '8:00pm' });

        $('#DateString').datepicker();
    });
</script>

