<script type="text/javascript">
    var gameDate = '@ViewBag.GameDate';
    $("#clock")
    .countdown(gameDate, function (event) {
        $('#days').text(
              event.strftime('%D')
            );
        $('#hours').text(
            event.strftime('%H')
            );
        $('#minutes').text(
            event.strftime('%M')
            );
        $('#seconds').text(
            event.strftime('%S')
            );
    });
    $(document).ready(function () {
        $('#pnlDetails').css('display', 'block');
        $('#pnlBio').css('display', 'none');
        $('#btnDetails').click();
    });
    $('.card-tab-button').on('click', function () {
        $('.card-tab-button').removeClass('selected');
        $(this).addClass('selected');
        if (this.id == 'btnDetails') {
            $('#pnlDetails').css('display', 'block');
            $('#pnlBio').css('display', 'none');
        }
        else if (this.id == 'btnBio') {
            $('#pnlDetails').css('display', 'none');
            $('#pnlBio').css('display', 'block');
        }
    });
</script>